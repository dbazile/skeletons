{
    "compilerOptions": {
        "sourceMap": true,
        "module": "es6",
        "target": "es6",
        "lib": ["dom", "es6"],
        "jsx": "react",

        "moduleResolution": "node",
        "experimentalDecorators": true,

        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/types/globals.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
